-- documentation, see http://haskell.org/cabal/users-guide/

name:                nanoml
version:             0.1.0.0
-- synopsis:
-- description:
license:             BSD3
license-file:        LICENSE
author:              Eric Seidel
maintainer:          eric@seidel.io
-- copyright:
category:            Language
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable nanoml-server
  main-is: Main.hs
  hs-source-dirs: bin
  default-language: Haskell2010
  build-depends: base >= 4.7 && < 5, nanoml, lucid, scotty, transformers

executable nano-check
  main-is: Check.hs
  hs-source-dirs: bin
  default-language: Haskell2010
  build-depends: base >= 4.7 && < 5, nanoml, transformers

library
  exposed-modules:     NanoML
                     , NanoML.Eval
                     , NanoML.Explore
                     , NanoML.Gen
                     , NanoML.Lexer
                     , NanoML.Misc
                     , NanoML.Monad
                     , NanoML.Parser
                     , NanoML.Pretty
                     , NanoML.Prim
                     , NanoML.Step
                     , NanoML.Types
  -- other-modules:
  -- other-extensions:
  build-depends:       MonadRandom >= 0.4
                     , aeson >= 0.8
                     , ansi-wl-pprint >= 0.6
                     , array
                     , base >=4.7 && <5
                     , bytestring >= 0.10
                     , containers >= 0.5
                     , deepseq
                     , directory
                     , exceptions >= 0.8
                     , fgl, fgl-visualize
                     , filepath
                     , haskeline
                     , mtl >= 2.2
                     , parsers >=0.12
                     , random >= 1.1
                     , regex-tdfa >= 1.2
                     , text >= 1.2
                     , transformers >= 0.4
                     -- , trifecta >=1.5
                     , unordered-containers >= 0.2
                     , vector >= 0.10
  build-tools:         alex, happy
  hs-source-dirs:      src
  default-language:    Haskell2010

executable check-all-from
  default-language: Haskell2010
  hs-source-dirs: bin
  main-is: CheckAllFrom.hs
  build-depends: base, nanoml
